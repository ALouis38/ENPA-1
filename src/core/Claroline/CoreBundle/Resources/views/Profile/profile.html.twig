{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="span12 border">
        <div class="row margin">
            <h3 class="sub-section-header">
                {{ user.getLastName() }} {{ user.getFirstName() }}
                <em class="muted"> ({{ user.getUsername() }})</em>
            </h3>

            <div class="span2">
                {% if user.getPhoto() != "" %}
                    <img class="border" src="{{ user.getPhoto() }}">
                {% else %}
                    <div class="hero-unit">
                        <h1><i class="icon-user"></i><h1>
                    </div>
                {% endif %}
            </div>

            <p>
                {% if user.getMail() != "" %}
                    <i class="icon-envelope"></i> {{ user.getMail() }}
                    &nbsp;
                {% endif %}
                {% if user.getPhone() != "" %}
                    <i class="icon-phone"></i> {{ user.getPhone() }}
                {% endif %}
            </p>
            <p class="muted">{{ 'user'|trans({}, 'platform') }} {{ user.getCreationDate()| timeAgo }}</p>
            <p>
                <a class="btn" href="{{path('claro_mail_form', {'userId':user.getId()})}}"><i class="icon-envelope"></i> {{ 'send_mail'|trans({}, 'platform') }}</a>
                <a class="btn" href="{{path('claro_message_form')}}?ids[]={{ user.getId() }}"><i class="icon-comment"></i> {{ 'send_message'|trans({}, 'platform') }}</a>
            </p>
        </div>
        <div class="row margin">
            <h3 class="sub-section-header">{{ 'badges'|trans({}, 'platform') }}</h3>

            <ul class="unstyled inline thumbnails badge_user_list">
            {% for badge in user.badges %}
                <li>
                    <a href="{{ path('claro_admin_badges_edit', {'id': badge.id}) }}" title="{{ badge.name('fr') }}" class="thumbnail">
                        <img class="badge_image" src="{{ asset(badge.webPath) }}" alt="{{ badge.name('fr') }}" />
                    </a>
                </li>
            {% else %}
                <li>{{ 'no_badges'|trans({}, 'platform') }}</li>
            {% endfor %}
            </ul>

        </div>
    </div>
{% endblock %}
