{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% block sectionContent %}
    <div id="tabs" class="row-fluid">
        <div class="span12">
            <ul class="nav nav-tabs">
                <li class="{% if 'claro_desktop_info' == app.request.get('_route') %}active{% endif %}">
                    <a href="{{ path('claro_desktop_info') }}" id="desktop_info_link">{{ 'informations'|trans({}, 'platform') }}</a>
                </li>
                <li class="{% if 'claro_desktop_perso' == app.request.get('_route') %}active{% endif %}">
                    <a href="{{ path('claro_desktop_perso') }}" id="desktop_perso_link">{{ 'misc'|trans({}, 'platform') }}</a>
                </li>
            </ul>
        </div>
    </div>
    {% block homeTab %}{% endblock %}
{% endblock %}