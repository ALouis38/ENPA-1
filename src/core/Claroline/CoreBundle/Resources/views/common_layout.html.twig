{% extends '::base.html.twig' %}

{% block title %}
    Claroline
{% endblock %}

{% block stylesheets %}
    <!--<link rel="stylesheet" type="text/css" href="{{ asset('bundles/clarolinecore/css/main.css') }}" />        -->
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/clarolinecore/css/ui-lightness/jquery-ui-1.8.18.custom') }}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/css/bootstrap.css')}}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/css/bootstrap-responsive.css')}}'>
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar; will require media queries ? */
      }
    </style>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src='{{ asset('bundles/clarolinecore/js/jquery/plugin/dynatree/jquery/jquery.js') }}'></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/jquery/jquery-ui-1.8.18.custom.min.js') }}" /></script>
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/js/bootstrap.js')}}"></script>
{% endblock %}

{% block favicon %}
    <link rel="shortcut icon" href="{{ asset('bundles/clarolinecore/images/claro_favicon.ico') }}" />
     <script type="text/javascript" src="{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/ico/apple-touch-icon-144-precomposed.png')}}"></script>
     <script type="text/javascript" src="{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/ico/apple-touch-icon-114-precomposed.png')}}"></script>
     <script type="text/javascript" src="{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/ico/apple-touch-icon-72-precomposed.png')}}"></script>
     <script type="text/javascript" src="{{ asset('bundles/clarolinecore/twitter-bootstrap/docs/assets/ico/apple-touch-icon-57-precomposed.png')}}"></script>
{% endblock %}

{% block body %}

    {% block global_content %}{% endblock %}

    {% render 'ClarolineCoreBundle:Layout:footer' %}

{% endblock %}