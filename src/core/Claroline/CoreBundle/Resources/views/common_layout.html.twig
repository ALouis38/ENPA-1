{% extends '::base.html.twig' %}

{% block title %}
    Claroline
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/clarolinecore/css/main.css') }}" />        
   <!--<link rel="stylesheet" type="text/css" href="{{ asset('bundles/clarolinecore/css/ui-lightness/jquery-ui-1.8.18.custom.css') }}" />-->
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/clarolinecore/dojo-release-1.7.2-src/dojo/resources/dojo.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/clarolinecore/dojo-release-1.7.2-src/dijit/themes/claro/claro.css') }}" />
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/jquery/jquery-1.7.1.min.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/jquery/jquery-ui-1.8.18.custom.min.js') }}"></script>
    <script>
    var dojoConfig = {
        async:true,
        cacheBust:new Date(),
        waitSeconds:5,
        //recommended: parseOnLoad = false and use dojo/parser.parse()
        parseOnLoad: false,
        tlmSiblingOfDojo: false,
        baseUrl:"{{ asset('bundles/clarolinecore/dojo-release-1.7.2-src') }}/",
        locale: 'fr',
        DebugAtAllCosts: false,
        isDebug: false,
        packages: [
            {name: "claroline", location: "claroline"},
            {name: "dojo", location: "dojo"},
            {name: "dijit", location: "dijit"},
            {name: "dojox", location: "dojox"},
            {name: "util", location: "util"}
            ]
        };
        //main: modual qui est load par d√©faut.
    </script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/dojo-release-1.7.2-src/dojo/dojo.js') }}" /></script>

{% endblock %}

{% block favicon %}
    <link rel="shortcut icon" href="{{ asset('bundles/clarolinecore/images/claro_favicon.ico') }}" />
{% endblock %}

{% block body %}

    {% render 'ClarolineCoreBundle:Layout:header' %}

    {% block global_content %}{% endblock %}

    {% render 'ClarolineCoreBundle:Layout:footer' %}

{% endblock %}