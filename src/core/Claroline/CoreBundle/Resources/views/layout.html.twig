{% extends '::base.html.twig' %}

{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}

{% block stylesheets %}
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/css/bootstrap.css')}}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/clarolinecore/css/pre-responsive.css')}}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/css/bootstrap-responsive.css')}}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/ui-lightness/jquery-ui-1.8.23.custom.css')}}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/clarolinecore/css/post-responsive.css')}}'>
{% endblock %}

{% block favicon %}
    <link rel="shortcut icon" href="{{ asset('bundles/clarolinecore/images/claro_favicon.ico') }}" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/ico/apple-touch-icon-144-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/ico/apple-touch-icon-114-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/ico/apple-touch-icon-72-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/ico/apple-touch-icon-57-precomposed.png')}}">
{% endblock %}

{% block layout %}
    <div id="wrapper">
        {% render 'ClarolineCoreBundle:Layout:topBar' %}
        <div id="grid" class="container-fluid">
            {% block sectionHeader %}{% endblock %}
            <div id="tabs" class="row-fluid">
                <div class="span12">
                    {% block tabs %}{% endblock %}
                </div>
            </div>
            <div class="row-fluid">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    {% render 'ClarolineCoreBundle:Layout:footer' %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src='{{ asset('../vendor//jms/twig-js/twig.js') }}'></script>
    <script type="text/javascript" src='{{ asset('bundles/frontend/jquery/plugin/dynatree/jquery/jquery.js') }}'></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.8.18.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript" src='{{ asset('bundles/frontend/jquery/plugin/jquery.cookie.js')}}'></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/twitter-bootstrap/docs/assets/js/bootstrap.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/claro_utils.js') }}"></script>
{% endblock %}