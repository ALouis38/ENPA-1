{% extends "ClarolineCoreBundle:Administration:ajaxLayout.html.twig" %}

{% block content %}
    <form action="{{ path('claro_admin_badges_award', {'id': badge.id}) }}" method="post" class="form-horizontal" id="award_form">

        {{ form_errors(form) }}

        {{ form_row(form.groups) }}
        {{ form_row(form.users) }}

        {{ form_rest(form) }}

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ 'award'|trans({}, 'platform') }}</button>
            <a href="{{ path('claro_admin_badges_edit', {'id': badge.id}) }}" title="{{ 'cancel'|trans({}, 'platform') }}" class="btn btn-danger">{{ 'cancel'|trans({}, 'platform') }}</a>
        </div>
    </form>
{% endblock %}