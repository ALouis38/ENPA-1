<table class="claroTable userList" width="100%" cellspacing="2" border="0">
    <thead>
        <tr class="headerX" align="center" valign"=top">
            <th id="c0" scope="col">{{ 'id'|trans({}, 'platformTranslation') }}</th>
            <th id="c1" scope="col">{{ 'username'|trans({}, 'platformTranslation') }}</th>
            <th id="c2" scope="col">{{ 'last_name'|trans({}, 'platformTranslation') }}</th>
            <th id="c3" scope="col">{{ 'first_name'|trans({}, 'platformTranslation') }}</th>
            <th id="c4" scope="col">{{ 'mail'|trans({}, 'platformTranslation') }}</th>
            <th id="c5" scope="col">{{ 'role'|trans({}, 'platformTranslation') }}</th>
            <th id="c6" scope="col">{{ 'delete'|trans({}, 'platformTranslation') }}</th>
            <th id="c7" scope="col">{{ 'login_as'|trans({}, 'platformTranslation') }}</th>
            <th id="c8" scope="col">{{ 'show'|trans({}, 'platformTranslation') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
    <tr id="{{user.getId()}}" class="row_user">
        <td align="center" headers="c0 L0">{{user.getId()}}</td>
        <td align="center" headers="c1 L0">{{user.getUsername()}}</td>
        <td align="center" headers="c2 L0">{{user.getLastName()}}</td>
        <td align="center" headers="c3 L0">{{user.getFirstName()}}</td>
        <td align="center" headers="c4 L0">{{user.getMail()}}</td>
        <td align="center" headers="c5 L0">
            <div>
                {%for role in user.getOwnedRoles() %}            
                    {{role.getTranslationKey()}}<br/>
                {% endfor %}
            </div>
        </td>
        {% if is_granted('user', 'EDIT') %}
            {%if app.user.id == user.getId() %}
                <td align="center" headers="c6 L0">TODO</td>
            {% else %}
                <td align="center" headers="c6 L0"><a class="link_delete" href="{{path('claro_profile_delete', {'id': user.getId()})}}">{{ 'delete'|trans({}, 'platformTranslation') }}</a></td>
            {% endif %}
            <td align="center" headers="c7 L0">login as</td>
        {% endif %}
        <td align="center" headers="c8 L0"><a href="{{path('claro_profile_show', {'id': user.getId()})}}">{{ 'show'|trans({}, 'platformTranslation') }}</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>