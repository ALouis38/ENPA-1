{% extends 'ClarolineCoreBundle::common_layout.html.twig' %}

{% block global_content %}

<form id="login_form" action="{{ path('claro_security_login_check') }}" method="post">

{% if error %}
     <div class="failure_msg">{{ 'login_failure'|trans({}, 'platformTranslation') }}</div>
{% endif %}

    <label for="username">{{ 'username'|trans({}, 'platformTranslation') }} :</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">{{ 'password'|trans({}, 'platformTranslation') }} :</label>
    <input type="password" id="password" name="_password" />

    <input type="submit" id="submit" name="_submit" value="{{ 'login'|trans({}, 'platformTranslation') }}" />
</form>

{% endblock global_content %}