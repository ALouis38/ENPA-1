{% extends 'ClarolineCoreBundle::layout.html.twig' %}

{% block sectionHeader %}
    &nbsp;
{% endblock %}

{% block content %}
    {% if not is_path_mode %}
        <div class="span3">
            <ul class="nav nav-tabs nav-stacked">
                <li class="disabled">
                    <a><b>{{ workspace.getName() }} </b><em>({{ workspace.getCode() }})</em></a>
                </li>
                {% render "ClarolineCoreBundle:Workspace:renderToolList" with {'workspaceId': workspace.getId()} %}
            </ul>
        </div>
    {% endif %}

    <div class="span9 section-content border">
        {% block section_content %}{% endblock %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('[rel=tooltip]').tooltip();
    </script>
{% endblock %}
