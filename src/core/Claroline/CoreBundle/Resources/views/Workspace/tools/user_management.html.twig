{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/Administration/user_list.html.twigjs"
      "@ClarolineCoreBundle/Resources/views/Workspace/tools/remove_user_confirm.html.twigjs"
       filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/workspace/workspace_user_management.js') }}' type="text/javascript"></script>
{% endblock %}
{% block section_content %}
   {% spaceless %}
        <ul class="breadcrumb">
            <li>
                <a href="{{ path('claro_workspace_tools_users_management', {'workspaceId': workspace.getId()}) }}"
                id="link_user_management">{{ 'user_management'|trans({}, 'platform') }}
                </a>
            </li>
        </ul>
    {% endspaceless %}
    <br/>
     {{ macros.flashBox() }}
    <div id="twig-attributes"
         data-workspaceId="{{workspace.getId()}}">
    </div>
    <p>
        <input type="text" id="search-user-txt" class="search-query" value=""/>
        <input type="button" id="search-user-button" value="{{ 'search'|trans({}, 'platform')|capitalize }}" class="btn btn-secondary"/>
        <input type="button" id="reset-user-button" value="{{ 'reset'|trans({}, 'platform')|capitalize }}" class="btn btn-secondary"/>
        <input type="button" id="delete-user-button" value="{{ 'delete'|trans({}, 'platform')|capitalize }}" class="btn btn-primary"/>
        <a href="{{ path('claro_workspace_unregistered_users_list', {'workspaceId': workspace.getId()})}}" id="add-user-link" style="float:right;">{{ 'add_user'|trans({}, 'platform') }}</a>
    </p>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'administrative_code'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'last_name'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'first_name'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'mail'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'role'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'parameters'|trans({}, 'platform')|capitalize }}</th>
                <th>{{ 'delete'|trans({}, 'platform')|capitalize }}</th>
            </tr>
        </thead>
        <tbody id="user-table-body">
        </tbody>
    </table>

    <div id="validation-box" class="modal hide fade">
        <div class="modal-header">
        </div>
        <div id="validation-box-body" class="modal-body" id="modal-body">
        </div>
        <div class="modal-footer">
            <input type="button" id="modal-valid-button" class="btn btn-primary" value="{{ 'ok'|trans({}, 'platform')|capitalize }}"/>
            <input type="button" id="modal-cancel-button" class="btn btn-secondary" value="{{ 'cancel'|trans({}, 'platform')|capitalize }}"/>
        </div>
    </div>
{% endblock %}

