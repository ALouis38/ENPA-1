{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/workspace/widget_properties.js') }}' type="text/javascript"></script>
{% endblock %}
{% block section_content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('claro_workspace_properties', {'workspaceId': workspace.getId()}) }}">{{ 'settings'|trans({}, 'platform') }}</a>
        </li>
        <span class="divider"> / </span>
        <li>
            <a href="{{ path('claro_workspace_widget_properties', {'workspaceId': workspace.getId()}) }}">{{ 'widgets'|trans({}, 'platform') }}</a>
        </li>
        <span class="divider"> / </span>
         <li>
            <a href="#">{{ 'display_options'|trans({}, 'platform') }}</a>
        </li>
    </ul>
<table id="widget-table"  class="table table-striped table-bordered table-condensed">
<thead>
    <tr>
        <th>{{ 'name'|trans({}, 'platform') }}</th>
        <th>{{ 'visible'|trans({}, 'platform') }}</th>
        <th>{{ 'lock'|trans({}, 'platform') }}</th>
    </tr>
</thead>
<tbody id="widget-table-body" data-workspace-id="{{ workspace.getId() }}">
    {% for config in configs %}
    <tr class='row-widget-config' data-id="{{ config.getParent().getId() }}" data-widget-id="{{ config.getWidget().getId() }}">
        <th>{{ config.getWidget().getName()|lower|trans({}, 'widget') }}</th>
        <th><input type="checkbox" class="chk-config-visible" value="1" {% if config.isVisible() %} checked {% endif %} {% if config.getParent().isLocked() %} disabled {% endif %}></th>
        <th><input type="checkbox" class="chk-admin-lock" value="1" checked  {% if config.getParent.isLocked() %} disabled {% endif %}></th>
    </tr>
    {% endfor %}
</tbody>
</table>
{% endblock %}