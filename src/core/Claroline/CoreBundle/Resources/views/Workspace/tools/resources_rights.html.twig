{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block section_content %}
<ul class="breadcrumb">
    <li>
        <a href="{{ path('claro_workspace_properties', {'workspaceId': workspace.getId()}) }}">{{ 'parameters'|trans({}, 'platform') }}</a>
    </li>
    <span class="divider"> / </span>
    <li>
        <a href="{{ path('claro_workspace_rights', {'workspaceId': workspace.getId()}) }}">{{ 'rights'|trans({}, 'platform') }}</a>
    </li>
    <span class="divider"> / </span>
    <li>
        <a href="#">{{ "resources"|trans({}, 'platform') }}</a>
    </li>
</ul>

<form id="resource-rights-form" action="{{ path('claro_workspace_resources_rigths_edit', {'workspaceId': workspace.getId() }) }}" method="post" id="form-resource-rights">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>{{ 'role'|trans({},'platform') }}</th>
            <th>{{ 'see'|trans({},'platform') }}</th>
            <th>{{ 'delete'|trans({},'platform') }}</th>
            <th>{{ 'open'|trans({},'platform') }}</th>
            <th>{{ 'edit'|trans({},'platform') }}</th>
            <th>{{ 'copy'|trans({},'platform') }}</th>
        </tr>
        {% for config in configs %}
        <tr class="row-rights">
            <td>{{ config.getRole().getTranslationKey()|trans({}, 'platform') }}</td>
            <td><input name="canSee-{{ config.getId() }}" id="can-see-{{ config.getId() }}" type="checkbox" value="1" {% if config.canSee() %} checked {% endif %}></td>
            <td><input name="canDelete-{{ config.getId() }}" id="can-delete-{{ config.getId() }}" type="checkbox" value="1" {% if config.canDelete() %} checked {% endif %}></td>
            <td><input name="canOpen-{{ config.getId() }}" id="can-open-{{ config.getId() }}" type="checkbox" value="1" {% if config.canOpen() %} checked {% endif %}></td>
            <td><input name="canEdit-{{ config.getId() }}" id="can-edit-{{ config.getId() }}" type="checkbox" value="1" {% if config.canEdit() %} checked {% endif %}></td>
            <td><input name="canCopy-{{ config.getId() }}" id="can-copy-{{ config.getId() }}" type="checkbox" value="1" {% if config.canCopy() %} checked {% endif %}></td>
        </tr>
        {% endfor %}
    </table>
    <input type="submit" value="submit"/>
</form>
{% endblock %}