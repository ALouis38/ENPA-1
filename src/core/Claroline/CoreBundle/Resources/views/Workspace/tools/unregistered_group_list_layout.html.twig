{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/Administration/user_list.html.twigjs"
      "@ClarolineCoreBundle/Resources/views/Workspace/tools/add_group_confirm.html.twigjs"
       filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/workspace/unregistered_group_list.js') }}' type="text/javascript"></script>
{% endblock %}
{% block section_content %}
   {% spaceless %}
        <ul class="breadcrumb">
            <li>
                <a href="{{ path('claro_workspace_tools_groups_management', {'workspaceId': workspace.getId()}) }}"
                id="link_group_management">{{ 'group_management'|trans({}, 'platform') }}
                </a>
            </li>
            <span class="divider"> / </span>
            <li>
                <a href="#"
                id="link_unregistered_groups">{{ 'unregistered_groups'|trans({}, 'platform')|capitalize }}
                </a>
            </li>
        </ul>
    {% endspaceless %}
    <div id="twig-attributes"
         data-workspaceId="{{workspace.getId()}}">
    </div>
    <div id="groups-button-div">
        <p>
        <input type="text" id="search-group-txt" class="search-query" value="" />
        <input type="button" id="search-button" value="{{'search'|trans({},'platform') }}" class="btn btn-secondary search-group-button"/>
        <a href="#" class="btn btn-primary btn-save-groups" id="btn-save-groups"> {{ 'add'|trans({}, 'platform') }}</a>
        <p/>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>{{ 'name'|trans({}, 'platform') }}</th>
            </tr>
        </thead>
        <tbody id="group-table-body">
        </tbody>
    </table>

    <p>
        <a href="#" class="btn btn-primary btn-save-groups" id="btn-save-groups"> {{ 'add'|trans({}, 'platform') }}</a>
    </p>

    <div id="validation-box" class="modal hide fade">
        <div class="modal-header">
        </div>
        <div id="validation-box-body" class="modal-body" id="modal-body">
        </div>
        <div class="modal-footer">
            <input type="button" id="modal-valid-button" class="btn btn-primary" value="{{ 'ok'|trans({},'platform')|capitalize }}"/>
            <input type="button" id="modal-cancel-button" class="btn btn-secondary" value="{{ 'cancel'|trans({},'platform')|capitalize }}"/>
        </div>
    </div>
{% endblock %}

