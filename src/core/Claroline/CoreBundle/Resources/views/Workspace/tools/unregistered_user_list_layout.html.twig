{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/Administration/user_list.html.twigjs"
      "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/add_user_confirm.html.twigjs"
       filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/workspace/unregistered_user_list.js') }}' type="text/javascript"></script>
{% endblock %}
{% block section_content %}
   {% spaceless %}
        <ul class="breadcrumb">
            <li>
                <a href="{{ path('claro_workspace_tools_users_management', {'workspaceId': workspace.getId()}) }}"
                id="link_user_management">{{ 'user_management'|trans({}, 'platform') }}
                </a>
            </li>
            <span class="divider"> / </span>
            <li>
                <a href="#"
                id="link_unregistered_users">{{ 'unregistered_users'|trans({}, 'platform') }}
                </a>
            </li>
        </ul>
    {% endspaceless %}
    <div id="twig-attributes"
         data-workspaceId="{{workspace.getId()}}">
    </div>
    <div id="user-search-div">
        <p>
        <input type="button" id="search-button" value ="{{ 'search'|trans({}, 'platform') }}" class="btn btn-secondary pull-right"/>
        <input type="text" id="search-user-txt" class="search-query input-small pull-right" value="" />
        <input type="button" class="btn btn-secondary btn-save-users" value="{{ 'add'|trans({}, 'platform') }}"/>
        <p/>
    </div>
    <form id="list-user-form" >
        <div id="user-checkboxes">
            <table id="user-table-checkboxes" class="table table-striped table-bordered table-condensed">
                <thead>
                <th>{{ 'username'|trans({}, 'platform') }}</th>
                <th>{{ 'last_name'|trans({}, 'platform') }}</th>
                <th>{{ 'first_name'|trans({}, 'platform') }}</th>
                <th></th>
                </thead>
                <tbody id="user-table-checkboxes-body">
                </tbody>
            </table>
        </div>
        <img src="{{ asset('bundles/clarolinecore/images/loading.gif') }}" id="user-loading" class="loading"/><br/>
    </form>
  <input type="button" class="btn btn-secondary btn-save-users" value="{{ 'add'|trans({}, 'platform') }}"/>
    <br/>
{% endblock %}

