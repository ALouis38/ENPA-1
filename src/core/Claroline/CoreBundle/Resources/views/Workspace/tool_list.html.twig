{% for tool in tools %}
    <li>
    <a href="{{ path('claro_workspace_open_tool',
        {'workspaceId': workspace.getId(), 'toolName': tool.getName()}) }}"
        id="{{ tool.getName() }}-link"
        data-original-title="{{ tool.getName()|trans({}, 'tools') }}"
        data-placement="right">
        <i class="{{ tool.getClass() }}"></i>
        <i class="icon-chevron-right pull-right"></i>{{ tool.getName()|trans({}, 'tools') }}
    </a>
    </li>
{% endfor %}

