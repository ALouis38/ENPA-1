{% extends 'ClarolineCoreBundle:Workspace:base_template.html.twig' %}
{% block section_content %}
{{ 'registered_users'|trans({}, 'platformTranslation') }}
{{workspace.getName()}}

<input type="button" id="button_user" value="show me the users !!!!" ></input>
<ul>
    {% for user in users %}
        <li class="row_user" id="user_{{user.getId()}}" >
            {{user.getUsername()}}
        </li>    
    {% endfor %}
</ul>
<div id="list user" title="ajouter un truc">
		<div id="list use_handle">			
			<a href="#" id="close">[ x ]</a>
			list users
		</div>
        
<script language="Javascript" src="{{ asset('bundles/clarolinecore/js/jquery.js') }}" ></script>
<script language="Javascript">
$(document).ready(function() 
{ 
    $('#list user').Draggable
    (
        {
			zIndex: 	20,			
            ghosting:	false,
			opacity: 	0.7,
			handle:	'#list user'
        }	
    );	
		
	$("#list user").hide();
						
			$('#button_user').click(function()
			{
				$("#list user").show();
			});
			
			$('#close').click(function()
			{
				$("#list user").hide();
			});
});
</script>
{% endblock %}