{
    "directory": {
        "items": {
            "new": {
                "name": "new",
                "items": {
                    {% for resourceType in resourceTypes %}
                    "{{ resourceType.getType() }}": {
                        "name": "{{ resourceType.getType() }}",
                        "route": "{{ path('claro_resource_creation_form', {'resourceType':resourceType.getType()}) }}",
                        "async": true
                    }
                    {% if not loop.last %},{% endif %}
                    {% endfor %}
                }
            },
            "download": {
                "name": "download",
                "route": "{{ path('claro_resource_export', {'instanceId': '_instanceId'}) }}",
                "async": false
            },
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
        }
    },
    "file": {
        "items": {
            "download": {
                "name": "download",
                "route": "{{ path('claro_resource_export', {'instanceId': '_instanceId'}) }}",
                "async": false
            },
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
       }
     },
     "text": {
        "items": {
            "download": {
                "name": "download",
                "route": "{{ path('claro_resource_export', {'instanceId': '_instanceId'}) }}",
                "async": false
            },
            "open" : {
                "name": "open",
                "route": "{{ path('claro_resource_custom', {'resourceType': 'text', 'action': 'open', 'resourceId': '_resourceId'}) }}",
                "async": false
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
        }
    }
    {% for pluginResourceType in pluginResourceTypes %}
    ,"{{ pluginResourceType.getType() }}" : {
        "items": {
            {% if pluginResourceType.isDownloadable == true %}
            "download": {
                "name": "download",
                "route": "{{ path('claro_resource_export', {'instanceId': '_instanceId'}) }}",
                "async": false
            },
            {% endif %}
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'}) }}",
                "async": true
            }
            {% for customAction in pluginResourceType.getCustomActions() %}
            , "{{ customAction.getAction() }}": {
                "name": "{{ customAction.getAction() }}",
                "route": "{{ path('claro_resource_custom', {'resourceType': pluginResourceType.getType(), 'action': customAction.getAction(), 'resourceId': '_resourceId'}) }}",
                "async": {{ customAction.isAsync() }}
            }
            {% endfor %}
         }
     }
    {% endfor %}
}