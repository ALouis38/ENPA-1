{% block layout %}
<form action="{{ path('claro_resource_right_edit', {'resourceId': resource.getId()}) }}" method="post" id="form-resource-rights">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>{{ 'role'|trans({}, 'platform') }}</th>
            <th>{{ 'delete'|trans({}, 'platform') }}</th>
            <th>{{ 'open'|trans({}, 'platform') }}</th>
            <th>{{ 'edit'|trans({}, 'platform') }}</th>
            <th>{{ 'copy'|trans({}, 'platform') }}</th>
            <th>{{ 'export'|trans({}, 'platform') }}</th>
        </tr>
        {% for config in configs %}
        <tr class="row-rights">
            <td>{{ config.getRole().getTranslationKey()|trans({}, 'platform') }}</td>
            <td><input name="canDelete-{{ config.getId() }}" id="can-delete-{{ config.getId() }}" type="checkbox" value="1"
                {% if (config.canDelete()) and (resource.isDeletable()) %} checked
                {% else %}
                    {% if resource.isDeletable == false %}
                       disabled
                    {% endif %}
                {% endif %}>
            </td>
            <td><input name="canOpen-{{ config.getId() }}" id="can-open-{{ config.getId() }}" type="checkbox" value="1"
                {% if config.canOpen() %} checked
                {% endif %}
            </td>
            <td><input name="canEdit-{{ config.getId() }}" id="can-edit-{{ config.getId() }}" type="checkbox" value="1"
                {% if (config.canEdit()) and (resource.isEditable()) %} checked
                {% else %}
                    {% if resource.isEditable() == false %}
                       disabled
                    {% endif %}
                {% endif %}>
            </td>
            <td><input name="canCopy-{{ config.getId() }}" id="can-copy-{{ config.getId() }}" type="checkbox" value="1"
                {% if config.canCopy() and (resource.isCopiable()) %} checked
                {% else %}
                    {% if resource.isCopiable() == false %}
                       disabled
                    {% endif %}
                {% endif %}>
            </td>
            <td><input name="canExport-{{ config.getId() }}" id="can-export-{{ config.getId() }}" type="checkbox" value="1"
                {% if config.canExport() and (resource.isExportable()) %} checked
                {% else %}
                    {% if resource.isExportable() == false %}
                       disabled
                    {% endif %}
                {% endif %}>
            </td>
        </tr>
        {% endfor %}
    </table>
    <input type="submit" value="{{ 'ok'|trans({}, 'platform') }}"/>
</form>

{% endblock %}