{% block layout %}
<form action="{{ path('claro_resource_rights_creation_edit', {'resourceId': resourceId, 'roleId': roleId}) }}" method="post" id="form-resource-creation-rights">
    <table class="table table-striped table-bordered table-condensed">
         <tr>
            <th>{{ 'resource'|trans({},'platform') }}</th>
            {% for config in configs %}
                 <th>{{ config.getRole().getTranslationKey()|trans({}, 'platform') }}</th>
            {% endfor %}
        </tr>
        {% for resourceType in resourceTypes %}
        <tr>
            <td>{{ resourceType.getName()|trans({}, 'resource') }}</td>
            {% for config in configs %}
                <td>
                    <input name="create-{{ resourceType.getId() }}" type="checkbox" value="1"
                       {% if config.canCreate() %}
                           {% for createType in config.getResourceTypes() %}
                                {% if createType.getName() == resourceType.getName() %}
                                    checked
                                {% endif %}
                           {% endfor %}
                           {% if config.resourceTypes|length == 0 %}
                                checked
                           {% endif %}
                       {% endif %}>
                </td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    <input name="isRecursive" type="checkbox" value="1"> {{ 'recursive'|trans({}, 'platform')}}</input>
    <br/>
    <input type="submit" value="submit"/>
</form>

{% endblock %}