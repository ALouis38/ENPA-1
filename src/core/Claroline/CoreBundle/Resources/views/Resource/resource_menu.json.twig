{
    "directory": {
        "items": {
            "new": {
                "name": "new",
                "items": {
                    {% set cpt = 1 %}
                    {% for resourceType in resourceTypes %}
                    "{{ resourceType.getType() }}": {
                        "name": "{{ resourceType.getType() }}",
                        "route": "{{ path('claro_resource_creation_form', {'resourceType':resourceType.getType()}) }}",
                        "async": true
                    }
                    {% set cpt = cpt+1 %}
                    {% if cpt <= resourceTypes|length %} , {% endif %}
                    {% endfor %}
                }
            },
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
        }
    },
    "file": {
        "items": {
            "download": {
                "name": "download",
                "route": "{{ path('claro_resource_custom', {'resourceType': 'file', 'action': 'download', 'instanceId': '_instanceId'}) }}",
                "async": false
            },
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
       }
     },
     "text": {
        "items": {
            "open" : {
                "name": "open",
                "route": "{{ path('claro_resource_custom', {'resourceType': 'text', 'action': 'open', 'instanceId': '_instanceId'}) }}",
                "async": false
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
        }
    }
    {% for pluginResourceType in pluginResourceTypes %}
    ,"{{pluginResourceType.getType()}}" : {
        "items": {
            "delete": {
                "name": "delete",
                "route": "{{ path('claro_resource_delete', {'instanceId': '_instanceId'}) }}",
                "async": true
            },
            "properties": {
                "name": "properties",
                "route": "{{ path('claro_resource_properties_form', {'resourceId': '_resourceId'})}}",
                "async": true
            }
         {% for customAction in pluginResourceType.getCustomActions() %}
            , "{{customAction.getAction()}}": {
                "name": "{{customAction.getAction()}}",
                "route": "{{ path('claro_resource_custom', {'resourceType': pluginResourceType.getType(), 'action': customAction.getAction(), 'instanceId': '_instanceId'})}}",
                "async": {{customAction.isAsync()}}
            }
         {% endfor %}
         }
     }
    {% endfor %}

}