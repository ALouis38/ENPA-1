<div id="res-breadcrums">
<a href="#" class="{{prefix}}-breadcrum-link" >/root</a>
{% for breadCrum in breadCrums %}
    <a href="#" class="{{prefix}}-breadcrum-link" data-key="{{breadCrum.id}}">/{{breadCrum.name}}</a>
{% endfor %}
</div>

{% for instance in resources %}
    <span id="{{prefix}}-instance-{{instance.id}}" data-key="{{instance.id}}" data-type="{{instance.type}}" class="res-block" style="display:inline-block; width:180px; text-align: center; vertical-align: top;" >
        <div class="wrapper">
            <input class="{{prefix}}-chk-instance"type="checkbox" value="{{instance.id}}" style="vertical-align: top;"/>
            {% if instance.type == "directory" %}
                <a class="link-navigate-instance" id="{{prefix}}-link-navigate-instance-{{instance.id}}" href="#">
            {% endif %}
            <img src="{{asset("icons/" ~ instance.thumbnail)}}"
                 {% if instance.path is defined %}
                    title="{{instance.path}}"
                 {% endif %}
             />
            {% if instance.type == "directory" %}
                </a>
            {% endif %}
        </div>
        <div class="wrapper">
            <span class="res-name">{{instance.name}}</span>
        </div>
        <div class="resource-bar">
            <a href="#" id="resource-menu-{{instance.id}}" class="resource-menu" data-key="{{instance.id}}" data-type="{{instance.type}}" data-resource-id="{{instance.resource_id}}">Menu</a>
        </div>
        <br/>
    </span>
{% endfor %}

