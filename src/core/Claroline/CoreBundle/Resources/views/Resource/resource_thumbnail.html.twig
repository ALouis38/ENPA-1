
{% if currentFolder is not null %}
    <div class="current_folder" id="{{prefix}}_current_folder"
        data-key="{{currentFolder.id}}"
        data-type="{{currentFolder.getResourceType().getType()}}"
        data-resource-id="{{currentFolder.getResource().getId()}}"
        {% if currentFolder.getParent() is not null %}
            data-parent-id="{{currentFolder.getParent().getId()}}"
        {% endif %}
        >
        {# TODO: display full path (breadcrumb-like) #}
        Current folder: {{currentFolder.name}}
    </div>
    <br>
    <br>
{% endif %}


{% for instance in resources %}
    <span id="{{prefix}}_instance_{{instance.id}}" data-key="{{instance.id}}" data-type="{{instance.type}}" class="res-block" style="display:inline-block; width:180px; text-align: center; vertical-align: top;" >
        <div class="wrapper">
            <input class="{{prefix}}_chk_instance"type="checkbox" value="{{instance.id}}" style="vertical-align: top;"/>
            {% if instance.type == "directory" %}
                <a class="link_navigate_instance" id="{{prefix}}_link_navigate_instance_{{instance.id}}" href="#">
            {% endif %}
            <img src="{{asset("icons/" ~ instance.thumbnail)}}"/>
            {% if instance.type == "directory" %}
                </a>
            {% endif %}
        </div>
        <div class="wrapper">
            <span class="res-name">{{instance.name}}</span>
        </div>
        <div class="resource_bar">
            <a href="#" id="resource_menu_{{instance.id}}" class="resource_menu" data-key="{{instance.id}}" data-type="{{instance.type}}" data-resource-id="{{instance.resource_id}}">Menu</a>
        </div>
        <br/>
    </span>
{% endfor %}

