{% twig_js name="ResourceManagerBreadcrumbs" %}

{% for node in nodes %}
    <li>
        <a href="#" data-node-id="{{ node.id }}">
            {% if loop.first %}
                <i class="icon-folder-open-alt"></i> {{ 'resources'|trans({}, 'platform') }}
            {% else %}
                {{ node.name }}
            {% endif %}
        </a>
        {% if not loop.last %}
            <span class="divider"> / </span>
        {% endif %}
    </li>
{% endfor %}
