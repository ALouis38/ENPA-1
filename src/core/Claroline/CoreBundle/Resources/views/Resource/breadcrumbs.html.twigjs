{% twig_js name="ResourceManagerBreadcrumbs" %}

{% for resource in resources %}
    <a href="#" data-resource-id="{{ resource.id }}">
        {% if loop.first %}
            <i class="icon-home"></i> {{ 'home'|trans({}, 'platform') }}
        {% else %}
            {{ resource.name }}
        {% endif %}
    </a>
    {% if not loop.last %}
        <span class="divider"> <i class="icon-angle-right"></i> </span>
    {% endif %}
{% endfor %}
