{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}
    {% form_theme form_settings 'ClarolineCoreBundle::form_theme.html.twig' %}
    <form class="form-horizontal" action="{{path('claro_admin_update_platform_settings')}}" method="post" {{ form_enctype(form_settings) }} id="form_settings">
        <fieldset>
            <legend>{{ 'platform_parameters'|trans({}, 'platform') }} :</legend>
            {{ form_errors(form_settings) }}
            {{ form_widget(form_settings) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
                <button class="btn cancel">
                    <a href="{{ path('claro_admin_index') }}">{{ 'cancel'|trans({}, 'platform') }}</a>
                </button>
            </div>
        </fieldset>
    </form>
{% endblock %}