{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}

    <div>
        {{
            macros.breadcrumbs([
                {
                    'icon': 'icon-th-large',
                    'name':'home_tabs'|trans({}, 'platform'),
                    'href':'#'
                }
            ])
        }}

        <h3>{{ 'admin_home_tabs_configuration'|trans({}, 'platform') }}</h3>

        <h4>{{ 'workspace_home_tabs'|trans({}, 'platform') }}</h4>
        <div>
            <a href="{{ path('claro_admin_workspace_home_tab_create_form') }}">
                <button class="btn btn-default">
                    {{ 'create_new_home_tab'|trans({}, 'platform') }}
                </button>
            </a>
        </div>
        <br>
        <table id="workspace-home-tab-table"  class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'name'|trans({}, 'platform') }}</th>
                    <th>{{ 'visible'|trans({}, 'platform') }}</th>
                    <th>{{ 'lock'|trans({}, 'platform') }}</th>
                    <th>{{ 'order'|trans({}, 'platform') }}</th>
                </tr>
            </thead>
            <tbody id="workspace-home-tab-table-body">
                {% for workspaceHomeTab in workspaceHomeTabs %}
                <tr class='row-workspace-home-tab-config' data-id="{{ workspaceHomeTab.getId() }}">
                    <td>
                        <a href="{{ path('claro_admin_workspace_home_tab_edit_form', {'homeTabId': workspaceHomeTab.getId()}) }}">
                            <i class="icon-edit"></i>
                        </a>
                        {{ workspaceHomeTab.getName() }}
                    </td>
                    <td><input type="checkbox" class="chk-visible"></td>
                    <td><input type="checkbox" class="chk-admin-lock"></td>
                    <td>{{ workspaceHomeTab.getTabOrder() }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <br>

        <h4>{{ 'desktop_home_tabs'|trans({}, 'platform') }}</h4>
        <div>
            <a href="{{ path('claro_admin_desktop_home_tab_create_form') }}">
                <button class="btn btn-default">
                    {{ 'create_new_home_tab'|trans({}, 'platform') }}
                </button>
            </a>
        </div>
        <br>
        <table id="desktop-home-tab-table"  class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'name'|trans({}, 'platform') }}</th>
                    <th>{{ 'visible'|trans({}, 'platform') }}</th>
                    <th>{{ 'lock'|trans({}, 'platform') }}</th>
                    <th>{{ 'order'|trans({}, 'platform') }}</th>
                </tr>
            </thead>
            <tbody id="desktop-home-tab-table-body">
                {% for desktopHomeTab in desktopHomeTabs %}
                <tr class='row-desktop-home-tab-config' data-id="{{ desktopHomeTab.getId() }}">
                    <td>
                        <a href="{{ path('claro_admin_desktop_home_tab_edit_form', {'homeTabId': desktopHomeTab.getId()}) }}">
                            <i class="icon-edit"></i>
                        </a>
                        {{ desktopHomeTab.getName() }}
                    </td>
                    <td><input type="checkbox" class="chk-visible"></td>
                    <td><input type="checkbox" class="chk-admin-lock"></td>
                    <td>{{ desktopHomeTab.getTabOrder() }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}