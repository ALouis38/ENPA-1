{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}

    <form
        class="form-horizontal"
        action="{{ path('claro_admin_desktop_home_tab_create') }}"
        method="post"
        {{ form_enctype(form) }}
    >
        <div class="panel-body">
            {{
                macros.breadcrumbs([
                    {
                        'icon': 'icon-th-large',
                        'name': 'home_tabs'|trans({}, 'platform'),
                        'href': path('claro_admin_home_tabs_configuration')
                    },
                    {
                        'name': 'desktop_home_tab_creation'|trans({}, 'platform'),
                        'href': ''
                    }
                ])
            }}

            <h3>{{ 'desktop_home_tab_creation'|trans({}, 'platform') }}</h3>
            <br>
            {{ form_widget(form) }}
        </div>

        <div class="form-actions panel-footer">
            <button type="submit" class="btn btn-primary">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
            <a href="{{ path('claro_admin_home_tabs_configuration') }}">
                <button  type="button" class="btn btn-default">
                    {{ 'cancel'|trans({}, 'platform') }}
                </button>
            </a>
        </div>
    </form>

{% endblock %}
