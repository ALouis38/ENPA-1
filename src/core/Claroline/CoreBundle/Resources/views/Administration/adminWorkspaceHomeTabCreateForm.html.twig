{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}

    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-th-large',
                'name': 'home_tabs'|trans({}, 'platform'),
                'href': path('claro_admin_home_tabs_configuration')
            },
            {
                'name': 'workspace_home_tab_creation'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}

    <h3>{{ 'workspace_home_tab_creation'|trans({}, 'platform') }}</h3>
    <br>
    <form
        class="form-horizontal"
        action="{{ path('claro_admin_workspace_home_tab_create') }}"
        method="post"
        {{ form_enctype(form) }}
    >
        {{ form_widget(form) }}

        <div class="form-actions panel-footer">
            <button type="submit" class="btn btn-primary">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
            <a href="{{ path('claro_admin_home_tabs_configuration') }}">
                <button  type="button" class="btn btn-default">
                    {{ 'cancel'|trans({}, 'platform') }}
                </button>
            </a>
        </div>
    </form>

{% endblock %}
