{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/administration/widgets.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}

<table id="widget-table"  class="table table-striped table-bordered table-condensed">
<thead>
    <tr>
        <th>{{ 'name'|trans({}, 'platform') }}</th>
        <th>{{ 'visible'|trans({}, 'platform') }}</th>
        <th>{{ 'lock'|trans({}, 'platform') }}</th>
    </tr>
</thead>
<tbody id="widget-table-body">
    {% for config in configs %}
    <tr class='row-widget-config' data-id="{{ config.getId() }}">
        <th>{{ config.getWidget().getName()|lower|trans({}, 'widget') }}</th>
        <th><input type="checkbox" class="chk-config-visible" value="1" {% if config.isVisible() %} checked {% endif %}></th>
        <th><input type="checkbox" class="chk-admin-lock" value="1" {% if config.isLocked() %} checked {% endif %}></th>
    </tr>
    {% endfor %}
</tbody>
</table>
{% endblock %}