{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/remove_group_confirm.html.twigjs"
       filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/administration/group_list.js') }}' type="text/javascript"></script>
{% endblock %}
{% block section_content %}
    <h3 class="sub-section-header" id="group-list-block">{{ 'groups'|trans({}, 'platform') }}</h3>
     <p>
         <input id="search-group-txt" type="text" class="search-query"/>
         <button class="btn btn-secondary" id="search-group-button">{{ 'search'|trans({}, 'platform') }}</button>
         <button class="btn btn-primary delete-groups-button">{{ 'delete'|trans({}, 'platform') }}</button>
     </p>
     <table class="table table-striped table-bordered table-condensed" id="group-table">
        <thead>
            <tr>
                <th>{{ 'name'|trans({}, 'platform') }}</th>
                <th>{{ 'users'|trans({}, 'platform') }}</th>
                <th>{{ 'settings'|trans({}, 'platform') }}</th>
                <th>{{ 'delete'|trans({}, 'platform') }}</th>
            </tr>
        </thead>
        <tbody id="group-table-body">
        </tbody>
    </table>
    <div id="twig-attributes"
         data-pages="{{ pages }}"
    ></div>
     <p>
        <button class="btn btn-primary delete-groups-button">{{ 'delete'|trans({}, 'platform') }}</button>
     </p>
     <!-------------- modal box ------------------------------------------------>
    <div id="validation-box" class="modal hide fade">
        <div class="modal-header">
        </div>
        <div id="validation-box-body" class="modal-body" id="modal-body">
        </div>
        <div class="modal-footer">
            <input type="button" id="modal-valid-button" class="btn btn-primary" value="{{ 'ok'|trans({}, 'platform') }}"/>
            <input type="button" id="modal-cancel-button" class="btn btn-secondary" value="{{ 'cancel'|trans({}, 'platform') }}"/>
        </div>
    </div>
{% endblock %}