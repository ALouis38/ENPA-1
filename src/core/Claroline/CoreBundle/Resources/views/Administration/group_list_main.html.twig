{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/administration/group_list.js') }}' type="text/javascript"></script>

{% endblock %}
{% block section_content %}
    <h3 class="sub-section-header" id="group-list-block">{{ 'groups'|trans({}, 'platform') }}</h3>
     <p><input id="search-group-txt" type="text" class="search-query"/> <button class="btn btn-secondary" id="search-group-button" type="submit">{{ 'search'|trans({}, 'platform') }}</button> </p>
     <table class="table table-striped table-bordered table-condensed" id="group-table">
        <thead>
            <tr>
                <th>{{ 'name'|trans({}, 'platform') }}</th>
                <th>{{ 'role'|trans({}, 'platform') }}</th>
                <th>{{ 'users'|trans({}, 'platform') }}</th>
                <th>{{ 'resources'|trans({}, 'platform') }}</th>
                <th>{{ 'settings'|trans({}, 'platform') }}</th>
                <th>{{ 'move'|trans({}, 'platform') }}</th>
                <th>{{ 'delete'|trans({}, 'platform') }}</th>
            </tr>
        </thead>
        <tbody id="group-table-body">
        </tbody>
    </table>
    <div id="twig-attributes"
         data-pages="{{ pages }}"
    ></div>
{% endblock %}