{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block section_content %}
    <form
        class="form-horizontal"
        action="{{ path('claro_user_desktop_home_tab_create') }}"
        method="post"
        {{ form_enctype(form) }}
    >
        <div class="panel-body">
            {{
                macros.breadcrumbs([
                    {
                        'icon': 'icon-cog',
                        'name': 'parameters'|trans({}, 'platform'),
                        'href': path('claro_desktop_open_tool', {'toolName': 'parameters'})
                    },
                    {
                        'name': 'home'|trans({}, 'platform'),
                        'href': path('claro_desktop_tool_config', {'tool': tool.getId()})
                    },
                    {
                        'name': 'home_tabs'|trans({}, 'platform'),
                        'href': path('claro_desktop_home_tab_properties')
                    },
                    {
                        'name': 'home_tab_creation'|trans({}, 'platform'),
                        'href': ''
                    }
                ])
            }}

            <h3>{{ 'home_tab_creation'|trans({}, 'platform') }}</h3>
            <br>
            {{ form_widget(form) }}
        </div>
        <div class="form-actions panel-footer">
            <button type="submit" class="btn btn-primary">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
            <a href="{{ path('claro_desktop_home_tab_properties') }}">
                <button  type="button" class="btn btn-default">
                    {{ 'cancel'|trans({}, 'platform') }}
                </button>
            </a>
        </div>
    </form>

{% endblock %}
