{% macro renderPager(search, workspaceId, roleId, pager) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_role_users',
                'routeParams': {'workspace': workspaceId, 'role': roleId}
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_workspace_role_users_search',
                    'routeParams': {'search': search, 'workspace': workspaceId, 'role': roleId}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro displayControls(workspaceId, roleId) %}
    {% if app.user %}
        <button class="btn btn-secondary action-button" data-action="remove">
            <i class="icon-trash"></i>
            {{ 'delete'|trans({}, 'platform') }}
        </button>
        <a href="{{ path('claro_workspace_unregistered_role_users', {'workspace': workspaceId, 'role': roleId} ) }}" class="btn btn-secondary">
            {{ 'add_user'|trans({}, 'platform') }}
        </a>
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}
{% from _self import displayControls %}

{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        vars=["locale"]
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/removeUserConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
        filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_workspace_role_users", "parameters": {'workspace': {{ workspace.getId() }}, 'role': {{ role.getId() }} }};
        parameters.route.search = {"route": "claro_workspace_role_users_search", "parameters": {'workspace': {{ workspace.getId() }}, 'role': {{ role.getId() }}  }};
       parameters.route.action.remove = {"route": "claro_workspace_remove_role_from_user", "parameters": {'workspace': {{ workspace.getId() }}, 'role': {{ role.getId() }} }, 'confirmTemplate': removeUserConfirm};
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}

{% block section_content %}

    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-cog',
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'parameters'})
            },
            {
                'name': 'roles'|trans({}, 'platform'),
                'href': path('claro_workspace_roles', {'workspace': workspace.getId()})
            },
            {
                'name': role.getTranslationKey()|trans({}, 'platform'),
                'href': path('claro_workspace_role_parameters', {'workspace': workspace.getId(), 'role': role.getId()})
            },
            {
                'name': 'users'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}

    {{ macros.flashBox() }}
    <div class="margin">
        <div class="search-bar">
            {{ displayControls(workspace.getId(), role.getId()) }}
            <div class="input-append pull-right">
                <input class="input-medium" type="text" id="search-items-txt"  placeholder="{{ 'search'|trans({}, 'platform') }}">
                <button class="filter btn" type="button" id="search-button">
                    <i class="icon-search"></i>
                </button>
            </div>
        </div>
        {{ renderPager(search, workspace.getId(), role.getId(), pager) }}
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <td>{{ 'administrative_code'|trans({}, 'platform') }}</td>
                    <td>{{ 'last_name'|trans({}, 'platform') }}</td>
                    <td>{{ 'first_name'|trans({}, 'platform') }}</td>
                    <td>{{ 'mail'|trans({}, 'platform') }}</td>
                    {% if app.user %}
                        <th><input type="checkbox" name="all" id="check-all-items"></input></th>
                    {% endif %}
                </tr>
            </thead>
            <tbody id="user-table-body">
                {% for user in pager.currentPageResults %}
                    <tr id="row-{{ user.id }}" class="row-user">
                        <td>{{ user.administrativeCode }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.mail }} </td>
                        {% if app.user %}
                            <td>
                                <input type="checkbox" value="{{ user.id }}" class="chk-item" align="center"></input>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ renderPager(search, workspace.getId(), role.getId(), pager) }}
        {{ displayControls(workspace.getId(), role.getId()) }}
    </div>
{% endblock %}
