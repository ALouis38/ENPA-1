{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block section_content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('claro_workspace_open_tool',
               {'workspaceId': workspace.getId(), 'toolName': 'parameters'}) }}">
               {{ 'parameters'|trans({}, 'platform') }}
            </a>
        </li>
         <span class="divider"> / </span>
        <li>
            <a href="#">{{ 'tools'|trans({}, 'platform') }}</a>
        </li>
    </ul>
    <table id="widget-table"  class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'role'|trans({}, 'platform') }}</th>
            <th>{{ 'configuration'|trans({}, 'platform') }}</th>
        </tr>
    </thead>
    <tbody id="widget-table-body">
        {% for role in roles %}
        <tr class='row-role'>
            <th> {{ role.getTranslationKey|trans({}, 'platform') }}</th>
            <th> <a href=" {{ path('claro_workspace_tool_parameters', {'workspaceId': workspace.getId(), 'roleName': role.getName() }) }}">
                {{ 'configure'|trans({}, 'platform') }} </a>
            </th>
        </tr>
        {% endfor %}
    </tbody>
    </table>
{% endblock %}