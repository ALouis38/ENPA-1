{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/Administration/group_list.html.twigjs"
      "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/remove_group_confirm.html.twigjs"
       filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/workspace/workspace_group_management.js') }}' type="text/javascript"></script>
{% endblock %}

{% block section_content %}
   {% spaceless %}
        <ul class="breadcrumb">
            <li>
                <a href="{{ path('claro_workspace_open_tool',
                    {'workspaceId': workspace.getId(), 'toolName': 'group_management'}) }}">
                    {{ 'group_management'|trans({}, 'tools') }}
                </a>
            </li>
        </ul>
    {% endspaceless %}

    <div id="twig-attributes"
         data-workspaceId="{{ workspace.getId() }}">
    </div>

    <p>
        <input type="button" id="search-group-button" value="{{'search'|trans({}, 'platform') }}" class="btn btn-secondary search-group-button pull-right"/>
        <input type="text" id="search-group-txt" class="search-query input-small pull-right" value=""/>
        <input type="button" id="delete-group-button" value="{{ 'delete'|trans({}, 'platform') }}" class="btn btn-secondary delete-groups-button" />
        <a class="btn btn-secondary" href="{{ path('claro_workspace_unregistered_groups_list', {'workspaceId': workspace.getId()}) }}" id="add-group-link">{{ 'add_group'|trans({}, 'platform') }}</a>
    </p>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <th>{{ 'name'|trans({}, 'platform') }}</th>
            <th>{{ 'role'|trans({}, 'platform') }}</th>
            <th>{{ 'parameters'|trans({}, 'platform') }}</th>
            <th></th>
        </thead>
        <tbody id="group-table-body">

        </tbody>
    </table>
    <input type="button" id="delete-group-button" value="{{ 'delete'|trans({}, 'platform') }}" class="btn btn-secondary delete-groups-button" />

<!-------------- modal box ------------------------------------------------>
    <div id="validation-box" class="modal hide fade">
        <div class="modal-header">
        </div>
        <div id="validation-box-body" class="modal-body" id="modal-body">
        </div>
        <div class="modal-footer">
            <input type="button" id="modal-valid-button" class="btn btn-primary" value="{{'ok'|trans({}, 'platform') }}"/>
            <input type="button" id="modal-cancel-button" class="btn btn-secondary" value="{{'cancel'|trans({}, 'platform') }}"/>
        </div>
    </div>
{% endblock %}

