{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block section_content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('claro_workspace_open_tool',
               {'workspaceId': workspace.getId(), 'toolName': 'parameters'}) }}">
               {{ 'parameters'|trans({}, 'platform') }}
            </a>
        </li>
        <span class="divider"> / </span>
        <li>
            <a href="{{ path('claro_workspace_rights', {'workspaceId': workspace.getId()}) }}">{{ 'rights'|trans({}, 'platform') }}</a>
        </li>
        <span class="divider"> / </span>
        <li>
            <a href="#">{{ "workspace"|trans({}, 'platform') }}</a>
        </li>
    </ul>

    <form id="workspace-rights-form" action="{{ path('claro_workspace_workspace_rigths_edit', {'workspaceId': workspace.getId() }) }}" method="post" id="form-resource-rights">
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>{{ 'role'|trans({},'platform') }}</th>
                <th>{{ 'view'|trans({},'platform') }}</th>
                <th>{{ 'delete'|trans({},'platform') }}</th>
                <th>{{ 'edit'|trans({},'platform') }}</th>
            </tr>
            {% for config in configs %}
            <tr class="row-rights">
                <td>{{ config.getRole().getTranslationKey()|trans({}, 'platform') }}</td>
                <td><input name="canView-{{ config.getId() }}" id="can-view-{{ config.getId() }}" type="checkbox" value="1" {% if config.canView() %} checked {% endif %}></td>
                <td><input name="canDelete-{{ config.getId() }}" id="can-delete-{{ config.getId() }}" type="checkbox" value="1" {% if config.canDelete() %} checked {% endif %}></td>
                <td><input name="canEdit-{{ config.getId() }}" id="can-edit-{{ config.getId() }}" type="checkbox" value="1" {% if config.canEdit() %} checked {% endif %}></td>
            </tr>
            {% endfor %}
        </table>
        <input type="submit" value="{{ 'ok'|trans({}, 'platform') }}"/>
    </form>
{% endblock %}