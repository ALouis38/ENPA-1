{% macro renderPager(search, workspaceId, pager) %}
{% if search == '' %}
    {{
        pagerfanta(
        pager,
        'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_unregistered_user_list',
                'routeParams': {'workspaceId': workspaceId}
            }
        )
    }}
{% else %}
    {{
        pagerfanta(
        pager,
        'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_unregistered_user_list_search',
                'routeParams': {'search': search, 'workspaceId': workspaceId}
            }
        )
    }}
{% endif %}
{% endmacro %}

{% macro displayControls(workspaceId) %}
    {% if app.user %}
        <button class="btn btn-secondary action-button" data-action="add">
            <i class="icon-plus"></i>
            {{ 'add'|trans({}, 'platform') }}
        </button>
    {% endif %}
{% endmacro %}

{% from _self import displayControls %}
{% from _self import renderPager %}

{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        vars=["locale"]
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/addUserConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
        filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_workspace_unregistered_user_list", "parameters": {'workspaceId': {{ workspace.getId() }} }};
        parameters.route.search = {"route": "claro_workspace_unregistered_user_list_search", "parameters": {'workspaceId': {{ workspace.getId() }} }};
        parameters.route.action.add = {"route": "claro_workspace_multiadd_user", "parameters": {'workspaceId': {{ workspace.getId() }} }, "confirmTemplate": addUserConfirm};
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}

{% block section_content %}

    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-user',
                'name': 'user_management'|trans({}, 'tools'),
                'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'user_management'})
            },
            {
                'name': 'unregistered_users'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}

    <div class="margin search-bar">
        {{ displayControls(workspace.getId()) }}
        <div class="input-append pull-right">
            <input class="input-medium" type="text" id="search-items-txt" placeholder="{{ 'search'|trans({}, 'platform') }}">
            <button class="filter btn" type="button" id="search-button">
                <i class="icon-search"></i>
            </button>
        </div>
        {{ renderPager(search, workspace.getId(), pager) }}
    </div>

    <form id="list-user-form" >
        <div id="user-checkboxes">
            <table id="user-table-checkboxes" class="table table-striped table-bordered table-condensed">
                <thead>
                    <th>{{ 'username'|trans({}, 'platform') }}</th>
                    <th>{{ 'last_name'|trans({}, 'platform') }}</th>
                    <th>{{ 'first_name'|trans({}, 'platform') }}</th>
                    <th><input type="checkbox" name="all" id="check-all-items"></input></th>
                </thead>
                <tbody id="user-table-checkboxes-body">
                    {% for user in pager.currentPageResults %}
                        <tr id="row-user-{{ user.getId() }}" class="row-user">
                            <td>{{ user.username }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>
                                <input type="checkbox" value="{{ user.id }}" class="chk-item" align="center"></input>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
    <div class="margin">

        {{ renderPager(search, workspace.getId(), pager) }}
        {{ displayControls(workspace.getId()) }}
    </div>
{% endblock %}
