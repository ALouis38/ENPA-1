{% macro renderPager(search, workspaceId, pager) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_registered_user_list',
                'routeParams': {'workspaceId': workspaceId}
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_workspace_registered_user_list_search',
                    'routeParams': {'search': search, 'workspaceId': workspaceId}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro displayControls(workspaceId) %}
    {% if app.user %}
        <button class="btn btn-secondary action-button" data-action="remove">
            <i class="icon-trash"></i>
            {{ 'delete'|trans({}, 'platform') }}
        </button>
        <a class="btn btn-secondary"
           href="{{ path('claro_workspace_unregistered_user_list', {'workspaceId': workspaceId}) }}">
            <i class="icon-plus"></i>
            {{ 'add_user'|trans({}, 'platform') }}
        </a>
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}
{% from _self import displayControls %}

{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        vars=["locale"]
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/removeUserConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
        filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_workspace_registered_user_list", "parameters": {'workspaceId': {{ workspace.getId() }} }};
        parameters.route.search = {"route": "claro_workspace_registered_user_list_search", "parameters": {'workspaceId': {{ workspace.getId() }} }};
        parameters.route.action.remove = {"route": "claro_workspace_delete_users", "parameters": {'workspaceId': {{ workspace.getId() }} }, 'confirmTemplate': removeUserConfirm};
        parameters.confirmTemplate = removeUserConfirm;
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}

{% block section_content %}

    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-user',
                'name': 'user_management'|trans({}, 'tools'),
                'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'user_management'})
            }
        ])
    }}

    {{ macros.flashBox() }}
    <div class="margin">
        <div class="search-bar">
            {{ displayControls(workspace.getId()) }}
            <div class="input-append pull-right">
                <input class="input-medium" type="text" id="search-items-txt"  placeholder="{{ 'search'|trans({}, 'platform') }}">
                <button class="filter btn" type="button" id="search-button">
                    <i class="icon-search"></i>
                </button>
            </div>
        </div>
        {{ renderPager(search, workspace.getId(), pager) }}
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <td>{{ 'administrative_code'|trans({}, 'platform') }}</td>
                    <td>{{ 'last_name'|trans({}, 'platform') }}</td>
                    <td>{{ 'first_name'|trans({}, 'platform') }}</td>
                    <td>{{ 'mail'|trans({}, 'platform') }}</td>
                    <td>{{ 'role'|trans({}, 'platform') }}</td>
                    {% if app.user %}
                        <td>{{ 'parameters'|trans({}, 'platform') }}</td>
                        <th><input type="checkbox" name="all" id="check-all-items"></input></th>
                    {% endif %}
                </tr>
            </thead>
            <tbody id="user-table-body">
                {% for user in pager.currentPageResults %}
                    <tr id="row-{{ user.id }}" class="row-user">
                        <td>{{ user.administrativeCode }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.mail }} </td>
                        <td>{% for role in user.getEntityRoles() %}
                            {% if role.getWorkspace() == workspace %}
                                {{ role.getTranslationKey()|trans({}, 'platform') }} {% if not loop.last %},{% endif %}
                            {% endif %}
                            {% endfor %}
                        </td>
                        {% if app.user %}
                            <td>
                                <a href="{{ path('claro_workspace_tools_show_user_parameters', {'userId': user.getId(), 'workspaceId': workspace.getId()} ) }}"
                                   class="btn btn-secondary">{{ 'parameters'|trans({}, 'platform') }} </a>
                            </td>
                            <td>
                                <input type="checkbox" value="{{ user.id }}" class="chk-item" align="center"></input>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ renderPager(search, workspace.getId(), pager) }}
        {{ displayControls(workspace.getId()) }}
    </div>
{% endblock %}
