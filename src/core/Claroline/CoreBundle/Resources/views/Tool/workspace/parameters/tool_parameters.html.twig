{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/tool/workspace/tool_properties.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('claro_workspace_open_tool',
               {'workspaceId': workspace.getId(), 'toolName': 'parameters'}) }}">
               {{ 'parameters'|trans({}, 'platform') }}
            </a>
        </li>
        <span class="divider"> / </span>
        <li>
            <a href="{{ path('claro_workspace_tools_roles', {'workspaceId': workspace.getId() }) }}">{{ 'tools'|trans({}, 'platform') }}</a>
        </li>
        <span class="divider"> / </span>
        <li>
            <a href="#">{{ role.getTranslationKey()|trans({}, 'platform') }}</a>
        </li>
    </ul>
    <table id="tool-table"
           data-role-id="{{ role.getId() }}"
           data-workspace-id="{{ workspace.getId() }}"
           class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'name'|trans({}, 'platform') }}</th>
                <th>{{ 'visible'|trans({}, 'platform') }}</th>
                <th>{{ 'order'|trans({}, 'platform') }}</th>
            </tr>
        </thead>
        <tbody id="widget-table-body" >
            {% for tool in tools %}
                <tr class='row-tool-config' data-tool-id={{ tool.getId () }}>
                    <th>{{ tool.getName()|lower|trans({}, 'tools') }}</th>
                    <th>
                        <input type="checkbox"
                               class="chk-tool-visible"
                               value="1"
                               {% if tool.isWorkspaceRequired() %} disabled {% endif %}
                               {% if tool.isVisible() %} checked {% endif %}
                    </th>
                    <th>
                        <div class="icon-circle-arrow-up" style="cursor: pointer;" ></div>
                    </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}