{% extends 'ClarolineCoreBundle:Message:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/message/list_removed.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}
    <button class="btn btn-secondary delete-msg" id="delete-msg">{{ 'delete'|trans({}, 'platform') }}</button>
    <button class="btn btn-secondary pull-right" id="search-msg">{{ 'search'|trans({}, 'platform') }}</button>
    <input id="search-msg-txt" type="text" class="pull-right  search-query input-medium"/>
    <table class="table table-striped table-bordered table-condensed" id="messages-table">
        <thead>
            <tr>
                <th>{{ 'date'|trans({}, 'platform') }}</th>
                <th>{{ 'from'|trans({}, 'platform') }}</th>
                <th>{{ 'object'|trans({}, 'platform') }}</th>
            </tr>
        </thead>
        <tbody id="message-table-body">
        </tbody>
    </table>
    <div id="loading" class="loading"></div>
    <button class="btn btn-secondary delete-msg" id="delete-msg">{{ 'delete'|trans({}, 'platform') }}</button>
{% endblock %}