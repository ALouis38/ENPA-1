{% extends "ClarolineCoreBundle:Dashboard:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/plugin/contextMenu-medialize/src/jquery.contextMenu.css') }}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/plugin/datepicker/css/datepicker.css')}}'>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
       vars=["locale"]
      "@ClarolineCoreBundle/Resources/views/Resource/resource_thumbnail.html.twigjs"
      "@ClarolineCoreBundle/Resources/views/Resource/resource_list.html.twigjs"
       filter="twig_js"
    %}

    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="{{ asset('bundles/clarolinecore/js/resource/resource_filter.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/clarolinecore/js/resource/interface_builder.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/clarolinecore/js/resource/resource_getter.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/clarolinecore/js/dashboard/dashboard_resource.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/frontend/jquery/plugin/datepicker/js/bootstrap-datepicker.js')}}"></script>
{% endblock %}

{% block content %}
    <div id="div-filter" class="span2"></div>
        <div id="div-resources" class="span10">
        <div id="dr-manager-options">
            <input type="checkbox" id="dr-is-flat" value="1">&nbsp;Voir aussi le contenu de tous les sous-r√©pertoires</input>
        </div>
        <div id ="dr-resource-manager-content">
            <div id="dr-resources-content"></div>
        </div>

        <button id="dr-close-button" class="btn" title="{{ 'close'|trans({}, 'platform') }}">
            {{ 'close'|trans({}, 'platform') }}
        </button>

        <div id="div-resources-top">
            <div id="dr-div-form"></div>
            <select id="dr-select-creation" style="width:150px">
            {% for resourceType in resourceTypes %}
                <option value = {{ resourceType.type }}> {{ resourceType.type }} </option>
            {% endfor %}
            </select>
            <button id="dr-submit-select">new</button>
            <div class="btn-group">
                <button id="dr-cut-button" class="btn" rel="tooltip" title="{{ 'cut'|trans({}, 'platform') }}">
                    <i class="icon-cut"></i>
                </button>
                <button id="dr-copy-button" class="btn" rel="tooltip" title="{{ 'copy'|trans({}, 'platform') }}">
                    <i class="icon-copy"></i>
                </button>
                <button id="dr-paste-button" class="btn" rel="tooltip" title="{{ 'paste'|trans({}, 'platform') }}">
                    <i class="icon-paste"></i>
                </button>
                <button id="dr-delete-button" class="btn" rel="tooltip" title="{{ 'delete'|trans({}, 'platform') }}">
                    <i class="icon-remove-sign"></i>
                </button>
                <button id="dr-download-button" class="btn" rel="tooltip" title="{{ 'download'|trans({}, 'platform') }}">
                    <i class="icon-download-alt"></i>
                </button>
            </div>
        </div>
        </br>
    </div>
{% endblock %}