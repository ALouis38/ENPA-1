{% extends "ClarolineCoreBundle:Dashboard:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/plugin/dynatree/src/skin/ui.dynatree.css') }}'>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/plugin/contextMenu-medialize/src/jquery.contextMenu.css') }}'>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/resource/data_filter.js') }}' type="text/javascript"></script>
    <script src='{{ asset('bundles/clarolinecore/js/resource/manager.js') }}' type="text/javascript"></script>
    <script src='{{ asset('bundles/clarolinecore/js/dashboard/dashboard_resource.js') }}' type="text/javascript"></script>
    <script src='{{ asset('bundles/frontend/jquery/plugin/contextMenu-medialize/src/jquery.contextMenu.js')}}'></script>
{% endblock %}

{% block section_content %}
    <div id='div_filter' style='float:left;'></div>
    <select id='dr_select_creation'>
        {% for resourceType in resourceTypes %}
            <option value = {{ resourceType.type }}> {{ resourceType.type }} </option>
        {% endfor %}
    </select>
    <button id='dr_submit_select'>new</button>
    <div id ='dr_resource_manager_content'>
        <div id='dr_manager_options' style='float:right;'>
            <button id='dr_tree_button'>Arbre</button>
            <button id='dr_thumbnail_button'>vignette</button><br>
            <input type='checkbox' id='dr_is_flat' value='1'>vue "plate"</input>
        </div>
        <div id='dr_div_form'></div>
        <a href='#' id='dr_resources_back'>back</a>
        <div id='dr_resources_content'></div>
        <button id='dr_download_button'>{{ 'download'|trans({}, 'platform') }}</button>
    </div>
{% endblock %}