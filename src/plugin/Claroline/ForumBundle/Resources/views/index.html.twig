{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% block section_content %}
<h3>{{ forumInstance.getName() }}</h3>
<p>
    <a href="{{path('claro_forum_form_subject_creation', {'forumInstanceId': forumInstance.getId()})}}">
        <button class="btn btn-primary"> cr√©er un sujet </button>
    </a>
</p>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'subject/author'|trans({}, 'forum') }}</th>
            <th>{{ 'responses'|trans({}, 'forum') }}</th>
            <th>{{ 'last_message'|trans({}, 'forum') }}</th>
        </tr>
    </thead>
    <tbody>
        {% for subject in subjects %}
            <tr>
                <td>
                    <a href="{{ path('claro_forum_show_message', {'subjectInstanceId': subject.instanceId, 'workspaceId': workspace.getId()}) }}">{{ subject.title }}</a><br>
                    {{ 'started_by' | trans({}, 'forum') }} {{ subject.subject_creator_firstname }}, {{ subject.subject_created|date('m/d/Y H:i:s') }}
                </td>
                <td>{{ subject.count_messages }}</td>
                <td>
                    <p>{{ subject.last_message_creator_firstname }}</p>
                    <p>{{ subject.last_message_created|date('m/d/Y H:i:s') }}</p>
                </td>
            </tr>

        {% endfor %}
     </tbody>
</table>
{% endblock %}