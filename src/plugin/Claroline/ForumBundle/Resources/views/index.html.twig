{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolineforum/js/subjects.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}
<h3>{{ forumInstance.getName() }}</h3>

<div id="twig-attributes"
     data-nbPages="{{ nbPages }}"
     data-forumInstanceId="{{ forumInstance.getId() }}"
     data-limit="{{ limit }}"
></div>

<p>
    <a href="{{path('claro_forum_form_subject_creation', {'forumInstanceId': forumInstance.getId()})}}">
        <button class="btn btn-primary">{{ 'new_subject'|trans({}, 'forum') }}</button>
    </a>
</p>
<table id="subjects_table" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'subject'|trans({}, 'forum') }}</th>
            <th>{{ 'responses'|trans({}, 'forum') }}</th>
            <th>{{ 'last_message'|trans({}, 'forum') }}</th>
        </tr>
    </thead>
    <tbody id ="table-subjects-body">
     </tbody>
</table>
{% endblock %}